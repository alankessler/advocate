<h1>Listing opportunities</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Title</th>
      <th>Deadline</th>
      <th>Time</th>
      <th>Location</th>
      <th>Organization</th>
      <th>User</th>
      <th>Points</th>
      <th>Community</th>
      <th>Venue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opportunities.each do |opportunity| %>
      <tr>
        <td><%= opportunity.description %></td>
        <td><%= opportunity.title %></td>
        <td><%= opportunity.deadline %></td>
        <td><%= opportunity.time %></td>
        <td><%= opportunity.location %></td>
        <td><%= opportunity.organization %></td>
        <td><%= opportunity.user %></td>
        <td><%= opportunity.points %></td>
        <td><%= opportunity.community %></td>
        <td><%= opportunity.venue %></td>
        <td><%= link_to 'Show', opportunity %></td>
        <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
        <td><%= link_to 'Destroy', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Opportunity', new_opportunity_path %>
