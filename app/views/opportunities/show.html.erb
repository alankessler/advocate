<%- model_class = Opportunity -%>
<div class="page-header">
  <h1><%=t '.title', :default => Opportunity %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @opportunity.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @opportunity.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:deadline) %></dt>
      <dd><pre class="prettyprint"><%= @opportunity.deadline %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:time) %></dt>
      <dd><pre class="prettyprint"><%= @opportunity.time %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:location) %></dt>
      <dd><pre class="prettyprint"><%= @opportunity.location %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:points) %></dt>
      <dd><pre class="prettyprint"><%= @opportunity.points %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              opportunities_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_opportunity_path(@opportunity), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              opportunity_path(@opportunity),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

