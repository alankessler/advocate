<%= simple_form_for(@opportunity) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :title %>
    <%= f.input :deadline %>
    <%= f.input :time %>
    <%= f.input :location %>
    <%= f.association :organization %>
    <%= f.association :user %>
    <%= f.input :points %>
    <%= f.association :community %>
    <%= f.association :venue %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
